{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": false,
    "declaration": false,
    "removeComments": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "outDir": "built",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "cucumber", "puppeteer"]
  },
  "exclude": ["node_modules", "typescript"]
}
