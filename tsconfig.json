{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": false,
    "declaration": false,
    "removeComments": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "outDir": "build",
    "allowJs": true,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "paths": {},
    "types": ["node", "cucumber", "puppeteer", "jest"]
  },
  "exclude": ["node_modules", "typescript"]
}
